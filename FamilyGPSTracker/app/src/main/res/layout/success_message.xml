<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/successMessageHeader"
        android:background="@color/light_blue">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_check_circle_outline_24"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/successMessageTitle"
            android:textColor="@color/light_blue"
            android:textAlignment="center"
            android:text="Success"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            />

        <TextView
            android:id="@+id/succesMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Your action performed successfully"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/light_blue_opacity_50"
           />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/succesMessageButton"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="ok"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/light_blue"
            android:background="@drawable/shape_button_light"
            />
    </LinearLayout>



</LinearLayout>

